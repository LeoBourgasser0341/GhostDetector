{% extends 'base.html.twig' %}

{% block title %}Ghost Detector{% endblock %}

{% block body %}
    <div class="button_clue">
        {% for clue in clues %}
            <button type="button" class="clue_button {{ clue.name }}"></button>
        {% endfor %}
    </div>
    <div class="lst_entite">
        {% for entite in entites %}
            <div class="entite">
                <img src="{{ asset('image/Entite/'~ entite.name ~'.png') }}" alt="{{ entite.name }}"><p>{{ entite.name }}</p>
                <div>
                {% for clue in entite.clues %}
                    <img src="{{ asset('image/Clue/'~ clue ~'.png') }}" alt="{{ clue }}" class="img_clue">
                {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
